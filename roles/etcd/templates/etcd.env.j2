ETCD_NAME="{{ etcd_name }}"
ETCD_DATA_DIR="/var/lib/etcd"
ETCD_INITIAL_CLUSTER="{% for node in etcd_cluster_nodes %}{{ node.name }}=https://{{ node.ip }}:2380{% if not loop.last %},{% endif %}{% endfor %}"
ETCD_INITIAL_CLUSTER_STATE="{{ etcd_initial_cluster_state }}"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ ansible_host }}:2380"
ETCD_LISTEN_PEER_URLS="https://0.0.0.0:2380"
ETCD_LISTEN_CLIENT_URLS="https://0.0.0.0:2379"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ ansible_host }}:2379"
ETCD_CLIENT_CERT_AUTH="true"
ETCD_TRUSTED_CA_FILE="{{ etcd_ssl_dir }}/ca.crt"
ETCD_CERT_FILE="{{ etcd_ssl_dir }}/etcd-{{ inventory_hostname }}.crt"
ETCD_KEY_FILE="{{ etcd_ssl_dir }}/etcd-{{ inventory_hostname }}.key"
ETCD_PEER_CLIENT_CERT_AUTH="true"
ETCD_PEER_TRUSTED_CA_FILE="{{ etcd_ssl_dir }}/ca.crt"
ETCD_PEER_CERT_FILE="{{ etcd_ssl_dir }}/etcd-{{ inventory_hostname }}.crt"
ETCD_PEER_KEY_FILE="{{ etcd_ssl_dir }}/etcd-{{ inventory_hostname }}.key"
